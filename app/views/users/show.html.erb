<script>
$(function() {
$("#slides").slidesjs({
    width: 100,
    height: 60,
    hoverPause: true,
    play: {
    active: false,
    effect: "fade",
    interval: 4000,
    auto: true
    },
    //ナビゲーションの設定
    navigation: false, //trueで表示、falseで非表示
    //ページネーションの設定
    pagination: false, //trueで表示、falseで非表示
