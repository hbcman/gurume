                        <div style="line-height: 170%;"><span style=" text-align: center; text-decoration: underline;"><font size="3"><%= link_to user.name, user_path(user) %></font></span><br>
                        <font size="2">コメント: <%= user.comment %><br>
                        住所: <%= user.address %><br>
                        予算: <%= user.money %><br>
                        営業時間: <%= user.time %></font></div>
                    </div>
                </td>   
            </div>
        <% end %>
        <% c = c + 1 %>
        <% if c%2==0 then %>
            <br>
        <% end %>
        <% if c%2==0 then %>
            </table>
        <% end %>
    <% end %>
<% end %>