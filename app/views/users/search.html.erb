<%# PC用ページ %>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<link rel="stylesheet" type="text/css" href="css/catalog.css">
<% if request.from_pc? %>
    <%# catalog.cssと連携させる %>
    <div class="textfont" align="center"><p><font size="7">お店一覧</font></p></div><br>
    <div class="textfont" align="center"><p><font size="6">カテゴリ検索</font></p></div>
    <div class="category">
    <table align="center" width="40%">
        <tr>
            <td width="25%" height="50px">
                <%= link_to users_search_path(:para =>'ラーメン') do%>
                <button class="btn"><font size="6">ラーメン</font></button>
                <% end %>
            </td>
            <td width="25%" height="50px" >
                <%= link_to users_search_path(:para =>'居酒屋') do%>
                <button class="btn"><font size="6">居酒屋</font></button>
                <% end %>
            </td>
            <td width="25%" height="50px">
                <%= link_to users_search_path(:para =>'定食') do%>
                <button class="btn"><font size="6">定食</font></button>
                <% end %>
            </td>
            <td width="25%" height="50px">
                <%= link_to users_search_path(:para =>'カフェ') do%>
                <button class="btn"><font size="6">カフェ</font></button>
                <% end %>
            </td>
        </tr>
    </table>
    <div class="textfont" align="center"><p><font size="6">店名検索</font></p></div>
        <table align="center">
            <td>
                <div>
                    <%= form_tag(users_search_path, method: "get") do %>
                        <%= label_tag :name, "店名" %><%= text_field_tag :name, params[:name] %>
                        <%= submit_tag "検索" %>
                    <% end %>
                </div>
            </td>
        </table>
    </div>
    <% c = 0 %>
    <% @user.each do |user| %>
        <% if c%3==0 then %>
            <table align="center" width="80%" cellspacing="20">
        <% end %>
        <%if c%3==0 then %>
            <div class="catalog_box_out_pc">
                <td style="background-color: #FFF1CF; width: 33%; vertical-align: top; border-radius: 7px; border: 1px #000000 solid;">
                    <div class="catalog_box_in_pc">
                        <%= link_to users_show_path(:id => user.id), :class => "image_pc" do %>
                            <% itioshi = user.itioshiphoto.split(",") %>
                            <%= image_tag itioshi.first %>
                        <% end %>
                        <div style="line-height: 170%;"><span style="text-align: center; text-decoration: underline;"><font size="6"><%= link_to user.name, user_path(user) %></font></span><br>
                        <font size="4">コメント: <%= user.comment %><br>
                        住所: <%= user.address %><br>
                        予算: <%= user.money %><br>
                        営業時間: <%= user.time %></font></div>
                    </div>
                </td>
            </div>
            <% if c==@user.length-1 then %>
                <div catalog_box_in_pc>
                <td style="width: 33%; vertical-align: top;"></td><td style="width: 33%; vertical-align: top;"></td>
                </div>
            <% end %>
        <% end %>
        <% if c%3==1 then %>
            <div class="catalog_box_out_pc">
                <td style="background-color: #FFF1CF; width: 33%; vertical-align: top; border-radius: 7px; border: 1px #000000 solid;">
                    <div class="catalog_box_in_pc">
                        <%= link_to users_show_path(:id => user.id), :class => "image_pc" do %>
                            <% itioshi = user.itioshiphoto.split(",") %>
                            <%= image_tag itioshi.first %>
                        <% end %>
                        <div style="line-height: 170%;"><span style=" text-align: center; text-decoration: underline;"><font size="6"><%= link_to user.name, user_path(user) %></font></span><br>
                        <font size="4">コメント: <%= user.comment %><br>
                        住所: <%= user.address %><br>
                        予算: <%= user.money %><br>
                        営業時間: <%= user.time %></font></div>
                    </div>
                </td>   
            </div>
            <% if c==@user.length-1 then %>
                <div catalog_box_in_pc>
                <td style="width: 33%; vertical-align: top;"></td>
                </div>
            <% end %>
        <% end %>
        <% if c%3==2 then %>
            <div class="catalog_box_out_pc">
                <td style="background-color: #FFF1CF; width: 33%; vertical-align: top; border-radius: 7px; border: 1px #000000 solid;">
                    <div class="catalog_box_in_pc">
                        <%= link_to users_show_path(:id => user.id), :class => "image_pc" do %>
                           <% itioshi = user.itioshiphoto.split(",") %>
                            <%= image_tag itioshi.first %>
                        <% end %>
                        <div style="line-height: 170%;"><span style=" text-align: center; text-decoration: underline;"><font size="6"><%= link_to user.name, user_path(user) %></font></span><br>
                        <font size="4">コメント: <%= user.comment %><br>
                        住所: <%= user.address %><br>
                        予算: <%= user.money %><br>
                        営業時間: <%= user.time %></font></div>
                    </div>
                </td>
            </div>
        <% end %>
        <% c = c + 1 %>
        <% if c%3==0 then %>
            <br>
        <% end %>
        <% if c%3==0 then %>
            </table>
        <% end %>
    <% end %>
<%# スマホ用ページ %>
<% else %>
    <%# catalog.cssと連携させる %>
    <link rel="stylesheet" type="text/css" href="catalog.css">
