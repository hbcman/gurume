                </td>
            </div>
            <% if c==@user.length-1 then %>
                <div catalog_box_in_sp>
                    <td style="width: 50%; vertical-align: top;"></td>
                </div>
            <% end %>
        <% end %>
        <% if c%2==1 then %>
            <div class="catalog_box_out_sp">
                <td style="background-color: #FFF1CF; width: 50%; vertical-align: top; border-radius: 7px; border: 1px #000000 solid;">
                    <div class="catalog_box_in_sp">
                        <%= link_to user_path(:id => user.id), :class => "image_sp" do %>
